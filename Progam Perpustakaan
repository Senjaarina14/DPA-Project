#include <iostream>
#include <string>

using namespace std;

const int MAX_BUKU = 5;

struct Buku {
  string judul;
  string peminjaman;
};

int main(){
  Buku buku[MAX_BUKU];
  int jumlahBuku = 0;
  int pilihan;

  cout << ".....Selamat Datang di Perpustakaan....." << endl;

  do{
    cout << "======== Menu Perpustakaan ========" << endl;
    cout << "1. Tampilkan Daftar Buku" << endl;
    cout << "2. Pilih Buku" << endl;
    cout << "3. Keluar" << endl;
    cin >> pilihan;

if (pilihan == 1) {
            if (jumlahBuku < MAX_BUKU) {
                cout << "Daftar Buku**** " << endl;
                cout << "1. Bumi Manusia " << endl;
                cout << "2. Dilan 1990 " << endl;
                cout << "3. Layangan Putus " << endl;
                cout << "4. Laut Bercerita " << endl;
                cout << "5. Laskar Pelangi " << endl;
                cout << endl;
            }
            
        } else if (pilihan == 2) {
            if (jumlahBuku == 0) {
                cout << "-----Silahkan Pilih Buku----- " << endl;
                cout << "1. Bumi Manusia " << endl;
                cout << "2. Dilan 1990 " << endl;
                cout << "3. Layangan Putus " << endl;
                cout << "4. Laut Bercerita " << endl;
                cout << "5. Laskar Pelangi " << endl;
                cin.ignore();
                getline(cin, buku[jumlahBuku].judul);
cout << "~ Masukkan Nama Anda ~: ";
                getline(cin, buku[jumlahBuku].peminjaman);
                cout << "~ Masukkan Tanggal Peminjaman ~: ";
                getline(cin, buku[jumlahBuku].peminjaman);
                jumlahBuku++;
                cout << "Buku '" << buku[jumlahBuku - 1].judul << "' berhasil dipinjam" << endl;
            }
        } else if (pilihan != 3) {
            cout << "Oopss...Opsi tidak valid. Silakan coba lagi!";
        }
    } while (pilihan != 3);

    cout << "Terima kasih! Sampai jumpa di perpustakaan!:))";
    return 0;
}



